<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Three.js Video Texture + Recorder</title>
  <style>
    body { margin: 0; overflow: hidden; background: #000; }
    #controls {
      position: fixed;
      top: 10px;
      left: 50%;
      transform: translateX(-50%);
      z-index: 10;
    }
    button { margin: 0 6px; padding: 8px 16px; font-size: 14px; }
    video#preview {
      display: block;
      margin: 60px auto 0;
      width: 400px;
    }
  </style>
</head>
<body>
  <div id="controls">
    <button id="startBtn">Start Recording</button>
    <button id="stopBtn" disabled>Stop Recording</button>
  </div>
  <video id="preview" controls></video>



  <script src="/main-bundled.js"></script>
</body>
</html>
